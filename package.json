{
  "name": "trampoemcasa",
  "version": "1.0.0",
  "description": "Conex√£o definitiva entre desenvolvedores brasileiros e oportunidades de trabalho remoto.",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@turbo/gen": "^1.9.7",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.5.1",
    "turbo": "=1.10.3"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "apps/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "packages/shared/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
