{
  "name": "trampoemcasa",
  "version": "1.0.0",
  "description": "Conex√£o definitiva entre desenvolvedores brasileiros e oportunidades de trabalho remoto.",
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint-format": "yarn format && eslint --fix",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@turbo/gen": "^1.9.7",
    "eslint": "^8.44.0",
    "eslint-config-custom": "*",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "turbo": "^1.10.15"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/web",
    "apps/crawlers",
    "apps/auto-email-sender/*",
    "apps/workers/*",
    "packages/*"
  ],
  "lint-staged": {
    "apps/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "packages/shared/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
