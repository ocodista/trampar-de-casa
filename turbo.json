{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["apps/web/.env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "env": ["URL_PREFIX"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "start": {},
    "db-start": {},
    "db-seed": {},
    "db-stop": {},
    "roles-renderer:start": {
      "cache": false
    },
    "roles-assigner:start": {
      "cache": false
    },
    "email-pre-renderer:start": {
      "cache": false
    },
    "roles-validator:start": {
      "cache": false
    },
    "email-composer:start": {
      "dependsOn": ["roles-validator:start"],
      "cache": false
    },
    "email-sender:start": {
      "cache": false
    }
  },
  "globalEnv": ["VERCEL_URL", "VERCEL_ENV"]
}
