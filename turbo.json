{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["apps/web/.env"],
  "pipeline": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "cache": false
    },
    "lint": {
      "env": ["URL_PREFIX"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false
    },
    "test:silent": {
      "cache": false
    },
    "start": {
      "cache": false
    },
    "db:start": {
      "cache": false
    }
  },
  "globalEnv": ["VERCEL_URL", "VERCEL_ENV"]
}
