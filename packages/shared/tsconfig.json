{
  "compilerOptions": {
    "types": ["vitest/importMeta"],
    "lib": ["ES2021"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react"
  },
  "exclude": ["node_modules"]
}
